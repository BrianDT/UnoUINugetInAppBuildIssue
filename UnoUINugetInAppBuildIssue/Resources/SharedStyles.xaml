<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <Color x:Key="HintsAndTipsTextColor">Cornsilk</Color>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
            <Color x:Key="HintsAndTipsTextColor">DarkSlateGray</Color>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <SolidColorBrush x:Key="HintsAndTipsTextBrush" Color="{ThemeResource HintsAndTipsTextColor}"/>

    <Style x:Key="HintAndTipsTextStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="0,1,0,1"/>
        <Setter Property="Foreground" Value="{StaticResource HintsAndTipsTextBrush}"/>
    </Style>
</ResourceDictionary>
